CREATE TABLE segment_efforts(
   effort_id INT PRIMARY KEY    NOT NULL,
   activity_id           INT    NOT NULL,
   segment_id            INT,
   rank                  INT,
   athlete_name          TEXT,
   athlete_gender        CHAR(1),
   average_hr            REAL,
   average_watts         REAL,
   distance              REAL,
   elapsed_time          INT,
   moving_time           INT,
   start_date            TIMESTAMP,
   start_date_local      TIMESTAMP,
   athlete_profile       TEXT
);